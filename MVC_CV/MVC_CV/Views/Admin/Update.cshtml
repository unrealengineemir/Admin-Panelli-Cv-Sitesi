@model MVC_CV.Models.Entity.TBL_ADMİN
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h3 style="color:#00c31e; text-align:center">Admin Güncelleme Sayfası</h3>

<form method="post">

    <div>

        <label>Kullanıcı Adı</label>
        @Html.TextBoxFor(x => x.USERNAME, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.USERNAME, "", new { @style = "color:red" })
    </div>
    <br />
    <div>

        <label>Şifre</label>
        @Html.TextBoxFor(x => x.PASSWORD, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.PASSWORD, "", new { @style = "color:red" })

    </div>

    <br />
    <button class="btn btn-success">Güncelle</button>

</form>

