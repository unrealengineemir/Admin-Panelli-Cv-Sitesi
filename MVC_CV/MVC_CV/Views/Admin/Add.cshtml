@model MVC_CV.Models.Entity.TBL_ADMİN
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h3 style="color:blue; text-align:center">Admin Ekleme Sayfası</h3>

<form method="post">

    <div>
        <label>Kullanıcı Adı</label>
        <input type="text" name="USERNAME" class="form-control" />
        @Html.ValidationMessageFor(x => x.USERNAME, "", new { @style = "color:red" })
    </div>

    <br />

    <div>
        <label>Şifre</label>
        <input type="text" name="PASSWORD" class="form-control" />
        @Html.ValidationMessageFor(x => x.PASSWORD, "", new { @style = "color:red" })
    </div>

    <br />

    <button class="btn btn-primary"> <i class="fa fa-plus-circle" aria-hidden="true"></i> Admin Ekle</button>

</form>
