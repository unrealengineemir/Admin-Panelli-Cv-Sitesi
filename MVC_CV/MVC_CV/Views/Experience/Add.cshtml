@model MVC_CV.Models.Entity.TBL_EXPERİENCES 
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h3 style="color:blue; text-align:center">Deneyim Ekleme Sayfası</h3>
<br /><br />

<form method="post">


    <input type="text" class="form-control" name="TİTLE" placeholder="Başlık giriniz." />
    @Html.ValidationMessageFor(m => m.TİTLE, "", new { @style = "color:red" })
    <br />

    <input type="text" class="form-control" name="SUBTİTLE" placeholder="Alt Başlık giriniz." />
    @Html.ValidationMessageFor(m => m.TİTLE, "", new { @style = "color:red" })
    <br />


    <input type="text" class="form-control" name="DATE" placeholder="Tarih giriniz." />
    @Html.ValidationMessageFor(m => m.TİTLE, "", new { @style = "color:red" })
    <br />

    <textarea class="form-control" name="DESCRİPTİON" placeholder="Buraya açıklama giriniz. " rows="5"></textarea>
    @Html.ValidationMessageFor(m => m.TİTLE, "", new { @style = "color:red" })
    <br />

    <button class="btn btn-primary"> <i class="fa fa-plus-circle" aria-hidden="true"></i> Deneyim Ekle</button>

</form>



