@model MVC_CV.Models.Entity.TBL_SKİLL
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h3 style="color:blue; text-align:center">Yetenek Ekleme Sayfası</h3>


<form method="post">

    <div>

        <label>Yetenek</label>
        <input type="text" class="form-control" name="SKİLL" />
        @Html.ValidationMessageFor(m => m.SKİLL, "", new { @style = "color:red" })
    </div>

    <br />

    <div>

        <label>Yetenek Seviyesi</label>
        <input type="text" class="form-control" placeholder="0-100 arası değer giriniz." name="DEGREE" />
        @Html.ValidationMessageFor(m => m.DEGREE, "", new { @style = "color:red" })


    </div>
    <br />
    <button class="btn btn-primary"> <i class="fa fa-plus-circle" aria-hidden="true"></i> Yeni Yetenek Ekle</button>


</form>

